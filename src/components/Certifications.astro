---
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Projects from '../components/Projects.astro';
import WorkExperience from '../components/WorkExperience.astro';
import Resume from '../components/Resume.astro';
import Contact from '../components/Contact.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chaitanya Chunduri</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="font-sans bg-white text-gray-900 dark:bg-gray-900 dark:text-white">

    <main class="max-w-5xl mx-auto pt-24 space-y-16">
      <section id="certifications" class="bg-gradient-to-b from-white via-indigo-50 to-indigo-100 py-16 px-6 animate-slide-up">
        <h3 class="text-4xl font-extrabold text-center text-indigo-800 mb-10">Certifications</h3>
        <div class="max-w-4xl mx-auto grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white p-5 rounded-xl border-l-4 border-indigo-600 shadow-md hover:shadow-lg transition">
            <h4 class="font-semibold text-indigo-900">IBM COBOL Core</h4>
            <p class="text-sm text-gray-600">IBM / LearnQuest · May 2024</p>
          </div>
          <div class="bg-white p-5 rounded-xl border-l-4 border-blue-500 shadow-md hover:shadow-lg transition">
            <h4 class="font-semibold text-blue-900">Basic System Programming on IBM Z</h4>
            <p class="text-sm text-gray-600">Coursera · Jun 2024</p>
          </div>
          <div class="bg-white p-5 rounded-xl border-l-4 border-purple-500 shadow-md hover:shadow-lg transition">
            <h4 class="font-semibold text-purple-900">Introduction to Enterprise Computing</h4>
            <p class="text-sm text-gray-600">IBM · Apr 2024</p>
          </div>
        </div>
      </section>
      
      
      
    </main>
  </body>
</html>