---
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Projects from '../components/Projects.astro';
import Certifications from '../components/Certifications.astro';
import WorkExperience from '../components/WorkExperience.astro';
import Resume from '../components/Resume.astro';
import Contact from '../components/Contact.astro';
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chaitanya Chunduri</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <script>
      let isDark = false;
      function toggleTheme() {
        const html = document.documentElement;
        isDark = !isDark;
        if (isDark) {
          html.classList.add('dark');
        } else {
          html.classList.remove('dark');
        }
      }
    </script>
  </head>

  <body class="font-sans bg-white text-gray-900 dark:bg-gray-900 dark:text-white transition-colors duration-300">
    <Navbar />
    <main class="max-w-5xl mx-auto pt-24 space-y-16">
      <Hero />
      <Projects />
      <Certifications />
      <WorkExperience />
      <Resume />
      <Contact />
    </main>
  </body>
</html>
